{
  "name": "@itwin/service-authorization",
  "version": "1.0.0",
  "description": "Service authorization client for iTwin platform",
  "main": "index.js",
  "scripts": {
    "compile": "npm run build",
    "build": "tsc 1>&2",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "test": "betools test --grep=\"#integration\" --invert",
    "cover": "nyc npm test"
  },
  "author": "Bentley Systems, Inc. (http://www.bentley.com)",
  "license": "MIT",
  "dependencies": {
    "@bentley/bentleyjs-core": "^2.19.10",
    "@bentley/context-registry-client": "^2.19.11",
    "@bentley/imodelhub-client": "^2.19.11",
    "@bentley/itwin-client": "^2.19.10",
    "openid-client": "^4.7.5"
  },
  "devDependencies": {
    "@bentley/build-tools": "^2.19.10",
    "@bentley/eslint-plugin": "^2.19.10",
    "@bentley/oidc-signin-tool": "^2.19.11",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "eslint": "^7.11.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.3.0"
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
    ],
    "extends": "plugin:@bentley/imodeljs-recommended",
    "rules": {
      "@bentley/no-internal-barrel-imports": [
        "error",
        {
          "ignored-barrel-modules": [
            "./src/index.ts"
          ]
        }
      ]
    }
  }
}